---
import BaseLayout from './base-layout.astro';
import Header from '@components/header/header.astro';
import Footer from '@components/footer/footer.astro';
import AuthModal from '@components/auth/auth-modal.astro';

export interface Props {
  title: string;
  description?: string;
  image?: string;
  canonicalUrl?: string;
}

const { title, description, image, canonicalUrl } = Astro.props;
---

<BaseLayout title={title} description={description} image={image} canonicalUrl={canonicalUrl}>
  <Header />
  <main class="flex-grow">
    <slot />
  </main>
  <Footer />

  <!-- Floating Contact Button -->
  <div class="fixed bottom-6 right-6 z-40">
    <a
      href="tel:0987654321"
      class="flex items-center justify-center w-14 h-14 bg-primary-500 text-white rounded-full shadow-lg hover:bg-primary-600 transition-colors"
      aria-label="Gọi điện"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
      </svg>
    </a>
  </div>

  <!-- Auth Modal (Signin/Signup) -->
  <AuthModal />
</BaseLayout>
